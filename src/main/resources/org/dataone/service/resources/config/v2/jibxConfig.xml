<schema-set xmlns:xs="http://www.w3.org/2001/XMLSchema"
	prefer-inline="false" generate-all="true" binding-per-schema="false"
	type-substitutions="xs:unsignedLong xs:long" enumeration-type="java5" package="org.dataone.service.types.v2">
	<class-decorator class="org.jibx.schema.codegen.extend.SerializableDecorator" serial-version="10000000"/>
	<class-decorator class="org.dataone.jibx.schema.codegen.extend.CollectionMethodsDecorator"/>

	<!-- For development cycles, we will use dataoneTypes.xsd as the schema-set 
		name, but For production releases we switch to an url that has v1 as the 
		last segment of the uri path -->
	<schema-set names="dataoneTypes_v2.0.xsd" prefix="d1_v2.0"
		namespaces="http://ns.dataone.org/service/types/v2.0" package="org.dataone.service.types.v2"
		binding-file-name="binding_v2_0.xml">
		<schema-type type-name="dateTime" java-class="java.util.Date"
			serializer="org.dataone.service.util.DateTimeMarshaller.serializeDateToUTC"
			deserializer="org.dataone.service.util.DateTimeMarshaller.deserializeDateToUTC" />
		<schema-type type-name="long" java-class="java.math.BigInteger"
			serializer="org.dataone.service.util.BigIntegerMarshaller.serializeBigInteger"
			deserializer="org.dataone.service.util.BigIntegerMarshaller.deserializeBigInteger" />
			
		<schema name="dataoneTypes_v2.0.xsd" includes="SystemMetadata Node NodeList OptionList ObjectFormat ObjectFormatList LogEntry Log Property" >
			<complexType name="Property">
                    <simpleContent>
                        <extension value-name="value" />
                    </simpleContent>
                </complexType>
		</schema>
		
	</schema-set>

</schema-set>