<schema-set xmlns:xs="http://www.w3.org/2001/XMLSchema"
	prefer-inline="false" generate-all="true" binding-per-schema="true"
	type-substitutions="xs:unsignedLong xs:long" enumeration-type="java5"
	package="org.dataone.service.types.v1_1">
	<class-decorator class="org.jibx.schema.codegen.extend.SerializableDecorator" serial-version="10000000"/>
	
     <!-- Classes requiring the CollectionMethodsDecorator are explicitly having the decorator applied by name. -->
     <!-- This is so that subclasses of Slice can have a SliceMethodsDecorator applied to them, without applying 
          the CollectionMethodsDecorator (since SliceMethodsDecorator needs to add the same methods and wouldn't work
          in conjunction).-->
     <class-decorator class="org.dataone.jibx.schema.codegen.extend.CollectionMethodsDecorator" match-name="QueryEngineDescription"/>
     <class-decorator class="org.dataone.jibx.schema.codegen.extend.CollectionMethodsDecorator" match-name="QueryEngineList"/>
     <class-decorator class="org.dataone.jibx.schema.codegen.extend.CollectionMethodsDecorator" match-name="QueryField"/>

	<!-- 
	For development cycles, we will use dataoneTypes_v1.1.xsd as the schema-set 
		name, but For production releases we switch to an url that has v1.1 as the 
		last segment of the uri path 
	-->
	<!-- 
	<schema-set names="v1.1" prefix="d1" namespaces="http://ns.dataone.org/service/types/v1.1" 
		package="org.dataone.service.types.v1_1" binding-file-name="binding_v1_1.xml"> 
	-->
	<schema-set names="dataoneTypes_v1.1.xsd" prefix="d1_v1.1"
		namespaces="http://ns.dataone.org/service/types/v1.1" package="org.dataone.service.types.v1_1"
		binding-file-name="binding_v1_1.xml">
		<schema-type type-name="dateTime" java-class="java.util.Date"
			serializer="org.dataone.service.util.DateTimeMarshaller.serializeDateToUTC"
			deserializer="org.dataone.service.util.DateTimeMarshaller.deserializeDateToUTC" />
		<schema-type type-name="long" java-class="java.math.BigInteger"
			serializer="org.dataone.service.util.BigIntegerMarshaller.serializeBigInteger"
			deserializer="org.dataone.service.util.BigIntegerMarshaller.deserializeBigInteger" />
		<!-- For development cycles, we will use dataoneTypes_1.1.xsd as the schema 
			name, but For production releases we switch to an url that has v1.1 as the 
			last segment of the uri path -->
		<schema name="dataoneTypes_v1.1.xsd"
			includes="QueryEngineDescription QueryEngineList QueryField" />

	</schema-set>
</schema-set>